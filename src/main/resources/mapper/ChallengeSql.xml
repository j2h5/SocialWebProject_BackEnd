<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bit.fin.mapper.ChallengeMapper">

   <insert id="insertChallenge" parameterType="challenge">
      insert into challenge (ch_id, ch_category,ch_title)
      values (1,#{ch_category},#{ch_title})
   	</insert>
   
    <select id = "getTotalCount" resultType="int">
   	 	select count(*) from challenge
   	</select>
   	 
   	<select id="getPagingList" parameterType="Map" resultType="challenge">
		select * from challenge order by ch_id desc limit #{start}, #{perpage}
	</select>
	
	<select id="getAllDatas" resultType="challenge">
		select * from challenge order by ch_id desc
	</select>
	
</mapper>
